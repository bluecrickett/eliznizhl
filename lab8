1)

#include <iostream>
using namespace std;

int main() {
    setlocale(0,"rus");
    int a = 0;
    cout << "Введите размер файла в байтах: ";
    cin >> a;
    cout << "Количество полных килобайт файла: " << a/1024;
}

2)

#include <iostream>
using namespace std;

int main() {
    setlocale(0,"rus");
    int a=0,b=0;
    cout << "Введите значения A и В через пробел: ";
    cin >> a >> b;
    cout << "Максимально возможное количество отрезков длины В на отрезке длины А: " << a/b;
}

3)

#include <iostream>
using namespace std;

int main() {
    setlocale(0,"rus");
    int a=0,b=0;
    cout << "Введите значения A и В через пробел: ";
    cin >> a >> b;
    cout << "Длина незанятой отрезками длиной В отрезка длины А: " << a%b;
}

4)

#include <iostream>
using namespace std;

int main() {
    setlocale(0,"rus");
    int a=0,b=0;
    cout << "Введите двузначное число: ";
    cin >> a;
    b = a%10;
    a = a/10;
    cout << "Перевернутое двузначное число: " << b <<a;
}

5)

#include <iostream>
using namespace std;

int main() {
    setlocale(0,"rus");
    int a=0,b=0;
    cout << "Введите трехзначное число: ";
    cin >> a;
    b = a%100;
    a = a/100;
    cout << "Изменненое трехзначное число: " << b <<a;
}
