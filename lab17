#include <iostream>
using namespace std;

int main(){
    int n,k,l,i;
    
    cout << "Введите размер массива N: "; cin >> n;
    int arr[n];
    cout << "Введите числа К и L (1 ≤ K ≤ L ≤ N): "; cin >> k >> l;
    cout << "Введите элементы массива: \n";
    for (i=0; i<n; i++){
        cout << i+1 << " элемент = "; cin >> arr[i];
    }
    cout << "Среднее арифметическое элементов массива, расположенных на " << k << " и " << l << " местах: " << (float)(arr[k]+arr[l])/2; 
}

2)
#include <stdio.h>
 
int main()
{
    int a[10];
    int n;
 
    printf("Введите размер массива N: ");
    scanf("%i",&n);
 
    int i;
    printf("Введите элементы массива: \n");
    for (i=0; i<n; ++i){
        printf("%i элемент = ",i+1);
        scanf("%i",&a[i]);
    }
 
    int r=a[1]-a[0];
    for (i=1; i<n; ++i) {
        if (r!=a[i]-a[i-1]) {
            r=0;
        }
    }
 
    printf("%i\n: ",r);
    return 0;
}

3)

#include <stdio.h>
 
int main()
{
    int a[10];
    int n;
 
    printf("Введите размер массива N: ");
    scanf("%i",&n);
 
    printf("Введите элементы массива: \n");
    int i;
    for (i=0; i<n; ++i){
        printf("a[%i] : ",i+1);
        scanf("%i",&a[i]);
    }
 
    int min = a[1];
 
    for (i=1; i<n; i+=2) {
        if (a[i]<min) min=a[i];
    }
 
    printf("Минимальный элемент из эелементов с четными номерами: ");
    printf("%i\n",min);
 
    return 0;
}

4)
#include <iostream>
using namespace std;

int main(){
    setlocale (0,"rus");
    int n,i,max,nmax;
    cout << "Введите размер массива N: "; cin >> n;
    int arr[n];
    cout << "Введите элементы массива: \n";
    for (i=0; i<n; i++){
        cout << i << " элемент = "; cin >> arr[i];
    }
    
    for (i=1; i<n-1; i++){
        if ((arr[i-1]<arr[i]) and (arr[i+1]<arr[i])){
            max = arr[i];
            nmax = i;
        }
    }
    cout << "Номер последнего локального максимума: " << nmax << "\n Последний локальный максимум: " << max;
    
}

5)

#include <iostream>
using namespace std;

int main(){
    setlocale (0,"rus");
    int n,i,j;
    cout << "Введите размер массива N: "; cin >> n;
    int arr[n];
    cout << "Введите элементы массива: \n";
    for (i=0; i<n; i++){
        cout << i << " элемент = "; cin >> arr[i];
    }
    
    for (i=0; i<n-1; i++){
        for (j=i+1; j<n; j++){
            if(arr[i]==arr[j]){
                cout << "Номера одинаковых элементов: " << i << " и " << j;
            }
        }
    }
}
