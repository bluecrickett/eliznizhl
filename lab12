#include <iostream>
using namespace std;

int main(){
    setlocale(0,"rus");
    int a = 0, b = 0;
    cout << "Введите номер дня: "; cin >> a;
    cout << "Введите номер месяца: "; cin >> b;
    cout << "Вывожу введенную дату в виде текста: ";
    switch (a){
        case 1:
        cout << "Первое "; break;
        case 2:
        cout << "Второе "; break;
        case 3:
        cout << "Третье "; break;
        case 4:
        cout << "Четвертое "; break;
        case 5:
        cout << "Пятое "; break;
        case 6:
        cout << "Шестое "; break;
        case 7:
        cout << "Седьмое "; break;
        case 8:
        cout << "Восьмое "; break;
        case 9:
        cout << "Девятое "; break;
        case 10:
        cout << "Десятое "; break;
        case 11:
        cout << "Одиннадцатое "; break;
        case 12:
        cout << "Двенадцатое "; break;
        case 13:
        cout << "Тринадцатое "; break;
        case 14:
        cout << "Четырнадцатое "; break;
        case 15:
        cout << "Пятнадцатое "; break;
        case 16:
        cout << "Шестнадцатое "; break;
        case 17:
        cout << "Семнадцатое "; break;
        case 18:
        cout << "Восемнадцатое "; break;
        case 19:
        cout << "Девятнадцатое "; break;
        case 20:
        cout << "Двадцатое "; break;
        case 21:
        cout << "Двадцать первое "; break;
        case 22:
        cout << "Двадцать второе "; break;
        case 23:
        cout << "Двадцать третье "; break;
        case 24:
        cout << "Двадцать четвертое "; break;
        case 25:
        cout << "Двадцать пятое "; break;
        case 26:
        cout << "Двадцать шестое "; break;
        case 27:
        cout << "Двадцать седьмое "; break;
        case 28:
        cout << "Двадцать восьмое "; break;
        case 29:
        cout << "Двадцать девятое "; break;
        case 30:
        cout << "Тридцатое "; break;
        case 31:
        cout << "Тридцать первое "; break;
    }
    switch(b){
        case 1:
        cout << "января"; break;
        case 2:
        cout << "февраля"; break;
        case 3:
        cout << "марта"; break;
        case 4:
        cout << "апреля "; break;
        case 5:
        cout << "мая"; break;
        case 6:
        cout << "июня"; break;
        case 7:
        cout << "июля"; break;
        case 8:
        cout << "августа"; break;
        case 9:
        cout << "сентября"; break;
        case 10:
        cout << "октября"; break;
        case 11:
        cout << "ноября"; break;
        case 12:
        cout << "декабря"; break;
    }
}

2)
#include <iostream>
using namespace std;

int main(){
    setlocale(0,"rus");
    int a = 0, b = 0;
    cout << "Определите первоначальное направление робота (1-Север, 2-Юг, 3-Запад, 4-Восток): "; cin >> a;
    cout << "Введите команду для робота (0 — продолжать движение, 1 — поворот налево, −1 — поворот направо): "; cin >>b;
    switch(a){
        case 1:
        switch(b){
            case 0:
            cout << "Робот продолжает двигаться на север"; break;
            case 1:
            cout << "Робот повернул налево и движется на запад"; break;
            case -1:
            cout << "Робот повернул направо и движется на восток"; break;
        }
        break;
        case 2:
        switch(b){
            case 0:
            cout << "Робот продолжает двигаться на юг"; break;
            case 1:
            cout << "Робот повернул налево и движется на восток"; break;
            case -1:
            cout << "Робот повернул направо и движется на запад"; break;
        }
        break;
        case 3:
        switch(b){
            case 0:
            cout << "Робот продолжает двигаться на запад"; break;
            case 1:
            cout << "Робот повернул налево и движется на юг"; break;
            case -1:
            cout << "Робот повернул направо и движется на север"; break;
        }
        break;
        case 4:
        switch(b){
            case 0:
            cout << "Робот продолжает двигаться на восток"; break;
            case 1:
            cout << "Робот повернул налево и движется на север"; break;
            case -1:
            cout << "Робот повернул направо и движется на юг"; break;
        }
    }
}
    
    
 3)    
#include <iostream>
using namespace std;

int main(){
    setlocale(0,"rus");
    int a = 0, b = 0;
    cout << "Введите количество учебных заданий(10-40): "; cin >> a;
    if (a<10 or a>40){
        cout << "Ошибка! Количество учебных заданий не пренадлежит промежутку"; exit;
    }
    switch(a){
        case 10:
        cout << "Десять "; break;
        case 11:
        cout << "Одиннадцать "; break;
        case 12:
        cout << "Двенадцать "; break;
        case 13:
        cout << "Тринадцать "; break;
        case 14:
        cout << "Четырнадцать "; break;
        case 15:
        cout << "Пятнадцать "; break;
        case 16:
        cout << "Шестнадцать "; break;
        case 17:
        cout << "Семнадцать "; break;
        case 18:
        cout << "Восемнадцать "; break;
        case 19:
        cout << "Девятнадцать "; break;
        case 20:
        cout << "Двадцать "; break;
        case 21:
        cout << "Двадцать одно "; break;
        case 22:
        cout << "Двадцать два "; break;
        case 23:
        cout << "Двадцать три "; break;
        case 24:
        cout << "Двадцать четыре "; break;
        case 25:
        cout << "Двадцать пять "; break;
        case 26:
        cout << "Двадцать шесть "; break;
        case 27:
        cout << "Двадцать семь "; break;
        case 28:
        cout << "Двадцать восемь "; break;
        case 29:
        cout << "Двадцать девять "; break;
        case 30:
        cout << "Тридцать "; break;
        case 31:
        cout << "Тридцать одно "; break;
        case 32:
        cout << "Тридцать два "; break;
        case 33:
        cout << "Тридцать три "; break;
        case 34:
        cout << "Тридцать четыре "; break;
        case 35:
        cout << "Тридцать пять "; break;
        case 36:
        cout << "Тридцать шесть "; break;
        case 37:
        cout << "Тридцать семь "; break;
        case 38:
        cout << "Тридцать восемь "; break;
        case 39:
        cout << "Тридцать девять "; break;
        case 40:
        cout << "Сорок "; break;
    }
    if ((a>9 and a<21) or (a>24 and a<31) or (a>34 and a<41)){
        cout << "учебных заданий";
    }
    if (a==21 or a==31){
        cout << "учебное задание";
    }
    if ((a>21 and a<25) or (a>31 and a<35)){
        cout << "учебных задания";
    }
}
