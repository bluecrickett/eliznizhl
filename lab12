#include <iostream>
using namespace std;

int main(){
    setlocale(0,"rus");
    int a = 0, b = 0;
    cout << "Введите номер дня: "; cin >> a;
    cout << "Введите номер месяца: "; cin >> b;
    cout << "Вывожу введенную дату в виде текста: ";
    switch (a){
        case 1:
        cout << "Первое "; break;
        case 2:
        cout << "Второе "; break;
        case 3:
        cout << "Третье "; break;
        case 4:
        cout << "Четвертое "; break;
        case 5:
        cout << "Пятое "; break;
        case 6:
        cout << "Шестое "; break;
        case 7:
        cout << "Седьмое "; break;
        case 8:
        cout << "Восьмое "; break;
        case 9:
        cout << "Девятое "; break;
        case 10:
        cout << "Десятое "; break;
        case 11:
        cout << "Одиннадцатое "; break;
        case 12:
        cout << "Двенадцатое "; break;
        case 13:
        cout << "Тринадцатое "; break;
        case 14:
        cout << "Четырнадцатое "; break;
        case 15:
        cout << "Пятнадцатое "; break;
        case 16:
        cout << "Шестнадцатое "; break;
        case 17:
        cout << "Семнадцатое "; break;
        case 18:
        cout << "Восемнадцатое "; break;
        case 19:
        cout << "Девятнадцатое "; break;
        case 20:
        cout << "Двадцатое "; break;
        case 21:
        cout << "Двадцать первое "; break;
        case 22:
        cout << "Двадцать второе "; break;
        case 23:
        cout << "Двадцать третье "; break;
        case 24:
        cout << "Двадцать четвертое "; break;
        case 25:
        cout << "Двадцать пятое "; break;
        case 26:
        cout << "Двадцать шестое "; break;
        case 27:
        cout << "Двадцать седьмое "; break;
        case 28:
        cout << "Двадцать восьмое "; break;
        case 29:
        cout << "Двадцать девятое "; break;
        case 30:
        cout << "Тридцатое "; break;
        case 31:
        cout << "Тридцать первое "; break;
    }
    switch(b){
        case 1:
        cout << "января"; break;
        case 2:
        cout << "февраля"; break;
        case 3:
        cout << "марта"; break;
        case 4:
        cout << "апреля "; break;
        case 5:
        cout << "мая"; break;
        case 6:
        cout << "июня"; break;
        case 7:
        cout << "июля"; break;
        case 8:
        cout << "августа"; break;
        case 9:
        cout << "сентября"; break;
        case 10:
        cout << "октября"; break;
        case 11:
        cout << "ноября"; break;
        case 12:
        cout << "декабря"; break;
    }
}

2)
#include <iostream>
using namespace std;

int main(){
    setlocale(0,"rus");
    int a = 0, b = 0;
    cout << "Определите первоначальное направление робота (1-Север, 2-Юг, 3-Запад, 4-Восток): "; cin >> a;
    cout << "Введите команду для робота (0 — продолжать движение, 1 — поворот налево, −1 — поворот направо): "; cin >>b;
    switch(a){
        case 1:
        switch(b){
            case 0:
            cout << "Робот продолжает двигаться на север"; break;
            case 1:
            cout << "Робот повернул налево и движется на запад"; break;
            case -1:
            cout << "Робот повернул направо и движется на восток"; break;
        }
        break;
        case 2:
        switch(b){
            case 0:
            cout << "Робот продолжает двигаться на юг"; break;
            case 1:
            cout << "Робот повернул налево и движется на восток"; break;
            case -1:
            cout << "Робот повернул направо и движется на запад"; break;
        }
        break;
        case 3:
        switch(b){
            case 0:
            cout << "Робот продолжает двигаться на запад"; break;
            case 1:
            cout << "Робот повернул налево и движется на юг"; break;
            case -1:
            cout << "Робот повернул направо и движется на север"; break;
        }
        break;
        case 4:
        switch(b){
            case 0:
            cout << "Робот продолжает двигаться на восток"; break;
            case 1:
            cout << "Робот повернул налево и движется на север"; break;
            case -1:
            cout << "Робот повернул направо и движется на юг"; break;
        }
    }
}
    
    
 3)    
    #include <iostream>
using namespace std;

int main(){
    setlocale(0,"rus");
    int a=0;
    cout << "Введите количество учебных заданий(10-40): "; cin >> a;
    if(a<10 or a>40){
        cout << "Ошибка! Число не соответствует заданному промежутку";
    }
    switch (a){
        case 10:
        cout << "Десять учебных заданий"; break;
        case 11:
        cout << "Одиннадцать учебных заданий"; break;
        case 12:
        cout << "Двенадцать учебных заданий"; break;
        case 13:
        cout << "Тринадцать учебных заданий"; break;
        case 14:
        cout << "Четырнадцать учебных заданий"; break;
    }
