1)
#include <iostream>
using namespace std;

int main(){
    int n,i,v;
    cout << "Введите размер массивов A и B N: "; cin >> n;
    int arra[n];
    int arrb[n];
    cout << "Введите элементы массива A: \n";
    for (i=0; i<n; i++){
        cout << i+1 << " элемент = "; cin >> arra[i];
    }
    cout << "Введите элементы массива В: \n";
    for (i=0; i<n; i++){
        cout << i+1 << " элемент = "; cin >> arrb[i];
    }
    for (i=0; i<n; i++){
        v = arra[i];
        arra[i] = arrb[i];
        arrb[i] = v;
    }
    cout << "Преобразованный массив А: ";
    for (i=0; i<n; i++){
        cout << arra[i] << " ";
    }
    cout << "Преобразованный массив В: ";
    for (i=0; i<n; i++){
        cout << arrb[i] << " ";
    }
}

2)
#include <iostream>
using namespace std;

int main(){
    int n,i,s,k=1;
    cout << "Введите размер массива A N: "; cin >> n;
    float arra[n];
    float arrb[n];
    cout << "Введите элементы массива A: \n";
    for (i=0; i<n; i++){
        cout << i+1 << " элемент = "; cin >> arra[i];
    }
    s = arra[0];
    for (i=0; i<n; i++){
        arrb[i] = (float)s/k;
        s += arra[i+1];
        k += 1;
    }
    cout << "Вывожу массив В, где элемент BK равен среднему арифметическому элементов массива A с номерами от 0 до K: \n";
    for (i=0; i<n; i++){
        cout << arrb[i] << " ";
    }
}

3)
#include <iostream>
using namespace std;

int main(){
    int n,i,v;
    cout << "Введите размер массива N: "; cin >> n;
    int arr[n];
    cout << "Введите элементы массива: \n";
    for (i=0; i<n; i++){
        cout << i+1 << " элемент = "; cin >> arr[i];
    }
    for (i=n; i>=0; i--){
        if (arr[i]%2!=0){
            v = arr[i];
            break;
        }
    }
    for (i=0; i<n; i++){
        if (arr[i]%2!=0){
            arr[i] += v;
        }
    }
    cout << "Вывожу массив, где все нечетные числа, содержащиеся в массиве, увеличены на исходное значение последнего нечетного числа: \n";
    for (i=0; i<n; i++){
        cout << arr[i] << " ";
    }
}

4)
#include <iostream>
using namespace std;

int main(){
    int n,i,min,max=0,maxi,mini;
    cout << "Введите размер массива N: "; cin >> n;
    int arr[n];
    cout << "Введите элементы массива: \n";
    for (i=0; i<n; i++){
        cout << i+1 << " элемент = "; cin >> arr[i];
    }
    for (i=0; i<n; i++){
        if (arr[i]>max){
            max = arr[i];
            maxi=i;
        }
    }
    min = max;
    for (i=0; i<n; i++){
        if (arr[i]<min){
            min = arr[i];
            mini = i;
        }
    }
    if (maxi < mini){
        for (i=maxi+1; i<mini; i++){
            arr[i] = 0;
        }
    }
    else{
        for (i=mini+1; i<maxi; i++){
            arr[i] = 0;
        }
    }
    cout << "Вывожу массив, где элементы массива, расположенные между его минимальным и максимальным элементами, обнулены: \n";
    for (i=0; i<n; i++){
        cout << arr[i] << " ";
    }
}
